# Required: provide your license key before running cobalt-docker.sh
COBALTSTRIKE_LICENSE="REPLACE_WITH_YOUR_COBALTSTRIKE_LICENSE"

# Required: shared teamserver password
TEAMSERVER_PASSWORD="REPLACE_WITH_YOUR_TEAMSERVER_PASSWORD"

# Optional: REST API username
REST_API_USER="csrestapi"

# Optional: host port that maps to SERVICE_PORT in the container
REST_API_PUBLISH_PORT="50443"

# Optional startup hardening controls
SERVICE_BIND_HOST="0.0.0.0"
SERVICE_PORT="50443"
UPSTREAM_HOST="127.0.0.1"
UPSTREAM_PORT="50050"
HEALTHCHECK_URL="https://127.0.0.1:50443/health"
HEALTHCHECK_INSECURE="true"

# Optional: Tailscale connectivity
# Provide a Tailscale auth key (preferably ephemeral) to join a Tailnet.
TS_AUTHKEY=""

# Optional: Tailscale API key (for external automation/scripts)
TS_API_KEY=""

# Optional: Extra arguments for 'tailscale up' (e.g., --hostname=cobalt-docker)
TS_EXTRA_ARGS=""

# Optional: Use Tailscale in userspace mode (no /dev/net/tun required)
# Set to 'true' if running on macOS or environments without TUN device access.
TS_USERSPACE="false"

# Optional: Use the Tailscale IP as the teamserver host address
# If 'true', the teamserver will bind to the Tailscale IP for beacon communications.
USE_TAILSCALE_IP="false"
